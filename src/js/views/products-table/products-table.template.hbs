<div class="mt-3 mb-3">
    <span class="font-weight-bold mr-3">My Orders</span>|<span class="font-weight-bold ml-3">Order # {{order.id}}</span>
</div>
<table class="table table-striped">
    <tbody>
    {{#each products}}
    <tr>
        <td>
            {{#ifEquals ../step 1}}
            {{name}}
            {{/ifEquals}}

            {{#ifNotEquals ../step 1}}
            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{name}}
            </button>
            <div class="dropdown-menu">
                {{#each variants}}
                <button class="dropdown-item product-variant" type="button" data-productid="{{../id}}" data-variantid="{{id}}">{{name}}</button>
                {{~/each}}
            </div>
            {{/ifNotEquals}}

        </td>
        <td>{{code}}</td>
        <td>
            {{#ifEquals ../step 1}}
            <div class="form-check">
                <input type="checkbox" class="form-check-input product-checkbox" value="{{id}}" {{#if selected}} checked {{/if}}/>
            </div>
            {{/ifEquals}}

            {{#ifNotEquals ../step 1}}
                {{#if variant}}
                    {{variant}}
                {{/if}}

                {{#unless variant}}
                    Not selected
                {{/unless}}
            {{/ifNotEquals}}
        </td>
    </tr>
    {{~/each}}
    </tbody>
</table>